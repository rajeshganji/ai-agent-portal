# Environment Configuration
NODE_ENV=production

# Session Security (REQUIRED - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=generate-a-strong-random-secret-here

# Server Configuration
PORT=3000

# Testing Mode: Echo what user says (set to 'true' for testing transcription)
# When enabled, system will repeat "You said: [transcription]" instead of AI response
ECHO_MODE=false

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# WebSocket Configuration
# WS_URL will be auto-detected from request in production

# Optional: OpenAI Configuration (used for Speech-to-Text and GPT responses)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# OPENAI_ORG_ID=org-xxxxxxxxxxxxxxxx

# ElevenLabs API Configuration (for Text-to-Speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs Model (optional, defaults to eleven_flash_v2_5 for ultra-low latency)
# Options: eleven_flash_v2_5 (75ms latency), eleven_turbo_v2_5, eleven_multilingual_v2, eleven_monolingual_v1
ELEVENLABS_MODEL_ID=eleven_flash_v2_5

# Voice Settings (optional - fine-tune voice characteristics)
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY=0.75
ELEVENLABS_STYLE=0

# Custom Voice IDs (optional - override default voice mappings)
# Get voice IDs from: https://elevenlabs.io/app/voices
# ELEVENLABS_VOICE_ALLOY=pNInz6obpgDQGcFmaJgB
# ELEVENLABS_VOICE_ECHO=TxGEqnHWrfWFTfGW9XjX
# ELEVENLABS_VOICE_FABLE=XB0fDUnXU5powFXDhCwa
# ELEVENLABS_VOICE_ONYX=pqHfZKP75CvOlQylNhV4
# ELEVENLABS_VOICE_NOVA=EXAVITQu4vr4xnSDxMaL
# ELEVENLABS_VOICE_SHIMMER=ThT5KcBeYPX3keUQqHPh

# Optional: Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@host:5432/database
# REDIS_URL=redis://user:password@host:6379

